<p id="notice"><%= notice %></p>

<h1>Products</h1>
<%= link_to('Log Out', destroy_user_session_path, method: :delete) %>
<table>
  <thead>
    <tr>
      <th>Pic</th>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image_url(:thumb) %></td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Show', product, class:'btn btn-link' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class:'btn btn-link' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-link' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class:'btn btn-link' %>
