
<table class="table table-striped table-bordered">
  <tr>
  <th class="center">Image</th>
  <th class="center">Name</th>
  <th class="center">Description</th>
  <th class="center">Price</th>
  <th class="center">Action</th>
  </tr>

    <% @products.each do |product| %>
    <tr>
      <td><%= image_tag product.image_url(:thumb) %></td>
      <td><%= product.title %></td> 
      <td><%= product.description %> </td>
      <td><%= number_to_currency(product.price,:unit=>'AUD ') %></td>
      <td><div class="btn-group">
        <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Action
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li><%= link_to 'View', product, class:'btn btn-link' %></li>
                <li><%= link_to 'Edit', edit_product_path(product), class:'btn btn-link' %></li>
                <li><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-link' %></li>
              </div>
            </div>
      </td>
    </tr>
    <% end %>

</table>


  <% if @products.blank? %>
  <h4>There are no products containing the term "<%= params[:search] %>".</h4>
  <% end %>
  <%= link_to 'New Product', new_product_path, class:'btn btn-link' %>
  
  </div>
  